extend layout  
include mixins/friendRec
block content
    
    -const friendInfo = friendInformation
    h2  Welcome #{user.name}
    .welcomeContainer
        a(class="buttonStylingBlueWhiteSquare" href=`/manageShows`) Manage Your Shows
            img.icon(src="../assets/images/tvScreen.png" alt="TV Screen")

        a(class="buttonStylingBlueWhiteSquare" href=`/displayFriends`) View Friends
            img.icon(src="../assets/images/users.png" alt="Two People")
    .recOptions
        .recOptionsLinks
        if friendInfo.length >= 1
            each friend in friendInfo
                .friendContainer
                    +friendRec(friend)
        else 
            h2 Add some friends!
            a(class="buttonStylingYellowBG" href=`/friends`) Add Friends

                        
   

        


