extend layout  
include mixins/friendCard
include mixins/friendRec
block content
    -const friendInfo = friendInformation
    .recOptions
    h2= user.name
        .recOptionsLinks
            a(href=`/manageShows`) Manage Your Shows
        if friendInfo.length >= 1
            each friend in friendInfo
                .friendContainer
                    +friendCard(friend)
                    +friendRec(friend)
        else 
            h2 Add some friends!
                        
   

        


