mixin showCard(show = {})
    div.show(id= `${show.poster_path}`)
        h2.title
        .removeForm
            form.remove(id=`${show.id}` method="POST" action=`/api/removeShow/${show.id}/`)
                button(type= "submit" name="removeShow") Delete
                //- if user && show.author.equals(user._id)
                //-     .edit
                //-         a(href=`/show/${show._id}/edit`) Edit
        h2= show.name
        .showDescription
            //- p= show.description.split(' ').slice(0, 25).join(' ')
            h3 User #{show.name} Review is:
            p= show.tags
               