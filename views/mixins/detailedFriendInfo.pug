mixin detailedFriendInfo(friendInfoShowInfo = {})
    -const watchingNow = friendInfoShowInfo.myShows.watchingNow
    -const recommendations = friendInfoShowInfo.myShows.recommendations
    -const mustWatch = friendInfoShowInfo.myShows.mustWatch
    -const apostrophe = "'s"
    h2 #{friendInfoShowInfo.name.concat(apostrophe)} Collection
    h2.testingJoint Currently Watching
    if watchingNow.length < 1
        div Currently not watching any shows
    else 
        div.friendCollection
            each show in watchingNow
                div.friendShowPosterPrivate(id = `${show.poster_path}`)
                    //- div.friendShowPoster(id = `${show.poster_path}`)
                    //- p= show.overview
                    p.posterTitleOverlay #{show.name}
                    div.ownerDescription.hidden 
                        h2.posterTitleOverlay #{show.name}  
                        h3 #{friendInfoShowInfo.name.concat(apostrophe)} Comment:
                        p #{show.ownerComment}  
                        button(id="exitComment" class="buttonStylingYellowBG" type="button" name="exitComment") OK
    h2.testingJoint Recommendations
    if recommendations.length < 1
        div Currently no show recommendations
    else 
        div
            each show in recommendations
                div.friendShowPosterPrivate(id = `${show.poster_path}`)
                    //- div.friendShowPoster(id = `${show.poster_path}`)
                    //- p= show.overview
                    p.posterTitleOverlay #{show.name} 
                    div.ownerDescription.hidden 
                        h2.posterTitleOverlay #{show.name}  
                        h3 #{friendInfoShowInfo.name.concat(apostrophe)} Comment:
                        p #{show.ownerComment}  
                        button(id="exitComment" class="buttonStylingYellowBG" type="button" name="exitComment") OK
    h2.testingJoint Must Watch
    if mustWatch.length < 1
        div Currently no show recommendations
    else 
        div
            each show in mustWatch
                div.friendShowPosterPrivate(id = `${show.poster_path}`)
                    //- div.friendShowPoster(id = `${show.poster_path}`)
                    //- p= show.overview
                    p.posterTitleOverlay #{show.name}  
                    div.ownerDescription.hidden 
                        h2.posterTitleOverlay #{show.name}  
                        h3 #{friendInfoShowInfo.name.concat(apostrophe)} Comment:
                        p #{show.ownerComment}    
                        button(id="exitComment" class="buttonStylingYellowBG" type="button" name="exitComment") OK
             
